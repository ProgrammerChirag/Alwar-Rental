<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@drawable/splashscreen"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#F65C5C"
    android:layout_marginTop="50dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginStart="40dp"
    app:layout_constraintBottom_toTopOf="@id/login_with_number_button"
    android:layout_marginEnd="40dp"
    app:cardElevation="5dp"
    android:id="@+id/login_with_email_button"
    android:layout_marginBottom="40dp"
    app:cardCornerRadius="10dp"
    >
    <TextView
        android:drawableStart="@drawable/email_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_with_email"
        android:textColor="#fff"
        android:fontFamily="@font/montserrat"
        android:textAlignment="center"
        android:textStyle="bold"
        android:padding="12dp"
        android:textSize="18sp"
        />
</androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        app:cardBackgroundColor="#F65C5C"
        app:cardElevation="5dp"
        android:id="@+id/login_with_number_button"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <TextView
            android:drawableStart="@drawable/call_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login_with_number"
            android:textColor="#fff"
            android:fontFamily="@font/montserrat"
            android:textAlignment="center"
            android:textStyle="bold"
            android:padding="12dp"
            android:textSize="18sp"
            />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>