<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    android:background="#FFD252"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="User.UserDashBoardHomeActivity">

<androidx.appcompat.widget.Toolbar
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:id="@+id/toolbar"
    android:background="#ffffff"
    android:gravity="center"
    android:elevation="5dp"
    app:titleMargin="5dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    >
<ImageView
    android:contentDescription="@string/todo"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:src="@drawable/rental_icon2"
    />

</androidx.appcompat.widget.Toolbar>

    <TextView

        android:id="@+id/what_are_you_looking_for"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/what_are_you_looking_for"
        app:layout_constraintBottom_toTopOf="@+id/card_view_option1"
        android:textAlignment="center"
        android:textStyle="bold"
        android:elevation="10dp"
        android:textSize="25sp"
        android:textColor="#000"
        android:layout_margin="20dp"
        android:padding="10dp"
        app:layout_constraintRight_toRightOf="parent"
        />

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="5dp"
    android:layout_height="120dp"
    app:layout_constraintBottom_toTopOf="@id/purchase_property"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/what_are_you_looking_for"
    android:id="@+id/card_view_option1"
    app:cardElevation="10dp"
    >
    <ImageView
        android:contentDescription="@string/todo"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:src="@drawable/property_for_rent"
        android:id="@+id/your_requests"
        android:padding="20dp"
        />
</androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/history"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_view_option1"
        android:id="@+id/purchase_property"
        app:cardElevation="10dp"
        >
        <ImageView
            android:contentDescription="@string/TODO"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/find_property_for_rent"
            android:src="@drawable/purchase_property_icon"
            android:padding="20dp"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/Bottom_Navigation_view_Ex"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/purchase_property"
        android:id="@+id/history"
        app:cardElevation="10dp"
        android:layout_marginBottom="50dp"
        >

        <ImageView
            android:contentDescription="@string/todo"
            android:layout_width="250dp"
            android:id="@+id/purchase_property"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:src="@drawable/previous_purchase_icon"
            android:padding="20dp"
            />

    </androidx.cardview.widget.CardView>

    <com.ittianyu.bottomnavigationviewex.BottomNavigationViewEx
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Bottom_Navigation_view_Ex"
        android:background="#fff"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:elevation="10dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>