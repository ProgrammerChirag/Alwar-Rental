<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    android:background="@drawable/ic_background_seller_dashboard"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="User.UserDashBoardHomeActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="60dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:id="@+id/card3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        >

        <Button
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:background="@drawable/btn_style4"
            android:text="@string/interested_properties"
            android:textColor="#3C40C6"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:elevation="10dp"
            android:fontFamily="@font/roboto_medium"
            android:padding="15dp"
            android:id="@+id/your_requests"
            />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_style4"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/card3"

        >
        <Button
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:background="@drawable/btn_style4"
            android:text="@string/property_for_rent"
            android:textColor="#3C40C6"
            android:textAllCaps="false"
            android:padding="15dp"
            android:textStyle="bold"
            android:elevation="10dp"
            android:fontFamily="@font/roboto_medium"
            android:id="@+id/find_property_for_rent"
            />
    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_style4"
        android:id="@+id/card2"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card1"
        >
        <Button
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:background="@drawable/btn_style4"
            android:text="@string/purchase_property"
            android:padding="15dp"
            android:textColor="#3C40C6"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_medium"
            android:id="@+id/purchase_property"
            />
    </androidx.cardview.widget.CardView>

    <Button
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card2"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:id="@+id/transaction_history"
        android:fontFamily="@font/montserrat"
        android:background="@android:color/transparent"
        android:textColor="#000"
        android:text="@string/transaction_history"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textAlignment="textStart"
        android:drawableEnd="@drawable/forward_arrow2"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="#000"
        app:layout_constraintTop_toBottomOf="@id/transaction_history"
        android:text="@string/no_transaction_found"
        android:id="@+id/text"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="380dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/recycler_view_transaction_history"
        app:layout_constraintTop_toBottomOf="@id/transaction_history"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>