<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    android:background="@drawable/main_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Admin.AdminLoginActivity">

<ImageView
    android:contentDescription="@string/todo"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_width="300dp"
    android:id="@+id/icon2"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_height="wrap_content"
    android:src="@drawable/rental_icon2"
    app:layout_constraintBottom_toTopOf="@id/login_logo"
    />

    <LinearLayout
        android:paddingLeft="10dp"
        android:id="@+id/login_logo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/form_edit_text"
        app:layout_constraintTop_toBottomOf="@id/icon2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/login"
            android:textColor="#000"
            android:textSize="25sp"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:textStyle="bold"
            android:fontFamily="@font/rubik_bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/baloo_bhai"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:text="@string/please_sign_in_to_continue"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="normal" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:paddingTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/form_edit_text"
        app:layout_constraintBottom_toTopOf="@+id/login_button_main_user"
        app:layout_constraintTop_toBottomOf="@id/login_logo"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_style1"
            android:textSize="18sp"
            android:textAlignment="center"
            android:inputType="textPersonName"
            android:id="@+id/main_user_id"
            android:hint="@string/enter_main_user_id_provided"
            android:padding="15dp"
            android:autofillHints="" />
        <EditText
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_style1"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:inputType="textPassword"
            android:id="@+id/main_user_password"
            android:hint="@string/enter_main_user_password"
            android:padding="15dp"
            android:autofillHints="" />
    </LinearLayout>

    <Button
        android:drawableEnd="@drawable/forward_arrow"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:drawablePadding="10dp"
        android:text="@string/login"
        android:textAllCaps="false"
        android:textColor="#000"
        android:background="@drawable/background_btn"
        android:fontFamily="@font/pacifico"
        android:layout_width="160dp"
        android:layout_height="45dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/form_edit_text"
        android:id="@+id/login_button_main_user"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>