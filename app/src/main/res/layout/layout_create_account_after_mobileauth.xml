<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    android:background="@drawable/main_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        app:layout_constraintBottom_toTopOf="@id/User_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="@string/enter_details_to_create_account"
        android:textColor="#202020"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="22sp"
        android:padding="10dp"
        android:id="@+id/text_view"
        android:textAlignment="center"
        android:fontFamily="@font/fredoka_one"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/User_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:autofillHints="Enter Mobile Number"
        android:background="@drawable/btn_style1"
        app:layout_constraintBottom_toTopOf="@id/Email_edit_text"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/baloo_bhai"
        android:hint="@string/enter_name"
        android:inputType="textPersonName"
        android:padding="15dp"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/text_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <EditText
        android:id="@+id/Email_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:autofillHints="Enter Mobile Number"
        android:fontFamily="@font/baloo_bhai"
        android:background="@drawable/btn_style1"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="@string/enter_your_email"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/password_edit_text"
        android:padding="15dp"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/User_Name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <EditText
        android:id="@+id/password_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:autofillHints="Enter password"
        android:fontFamily="@font/baloo_bhai"
        android:background="@drawable/btn_style1"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="@string/enter_password"
        android:inputType="textPassword"
        android:padding="15dp"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/enter_user_id"
        app:layout_constraintTop_toBottomOf="@id/Email_edit_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <EditText
        android:id="@+id/enter_user_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:autofillHints="Enter Mobile Number"
        android:background="@drawable/btn_style1"
        android:fontFamily="@font/baloo_bhai"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toTopOf="@id/login_button1"
        android:hint="@string/enter_user_id"
        android:inputType="text"
        android:maxLength="10"
        android:padding="15dp"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/password_edit_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:drawableEnd="@drawable/forward_arrow"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:text="@string/signup"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="15sp"
        android:background="@drawable/btn_style2"
        android:fontFamily="@font/montserrat"
        android:layout_width="160dp"
        android:layout_height="45dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@+id/enter_user_id"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/login_button1"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
