<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    app:cardBackgroundColor="#DFDFDF"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    android:layout_margin="10dp"
    app:cardElevation="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/profile_image_user"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="15dp"
            android:src="@drawable/demoimage"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:textStyle="bold"
            android:textSize="18sp"
            android:id="@+id/nameUser"
            android:textColor="#000"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginStart="20sp"
            app:layout_constraintLeft_toRightOf="@id/profile_image_user"
            android:text="@string/programmer_chirag"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:layout_marginStart="20sp"
            android:id="@+id/emailitem"
            app:layout_constraintTop_toBottomOf="@id/nameUser"
            android:text="@string/juneja_chirag_020_gmai_com"
            app:layout_constraintLeft_toRightOf="@id/profile_image_user"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/emailitem"
            app:layout_constraintTop_toBottomOf="@id/emailitem"
            android:gravity="center_vertical"
            android:text="@string/_91_9982917736"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/callUser"
            android:drawablePadding="30sp"
            android:textColor="#000"
            android:textSize="18sp"
            android:drawableEnd="@drawable/call_icon3"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

